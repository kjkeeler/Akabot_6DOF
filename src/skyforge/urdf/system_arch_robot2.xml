<?xml version="1.0"?>
<robot name="skyforge" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Properties -->
  <xacro:property name="mesh_dir" value="package://skyforge/meshes"/>
  <xacro:property name="link_length" value="2"/>
  <xacro:property name="link_radius" value="0.14"/>
  <xacro:property name="joint_size" value="0.180"/>
  <xacro:property name="end_size" value="0.100"/>
  <xacro:property name="joint_limit" value="${pi}"/>

  <!-- Materials -->
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>
  <material name="magenta">
    <color rgba="1 0 1 1"/>
  </material>
  <material name="cyan">
    <color rgba="0 1 1 1"/>
  </material>
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>

  <!-- World Link -->
  <link name="world"/>

  <!-- Base Link -->
  <link name="base_link"/>

  <!-- World to base_link -->
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Link 1 with STL Mesh -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/robot_arm.stl"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/robot_arm.stl"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${joint_limit}" upper="${joint_limit}" effort="10" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Additional Links and Joints (continue as before) -->
  ...

</robot>